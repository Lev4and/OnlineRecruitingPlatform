@using OnlineRecruitingPlatform.Model.Database.Entities
<div class="mb-3 card">
    <div class="card-header">Типы доступа для комментария к соискателю</div>
        @(Html.DevExtreme().DataGrid<ApplicantCommentAccessType>()
            .ID("gridContainer")
            .ShowBorders(true)
            .ShowRowLines(true)
            .ColumnHidingEnabled(true)
            .FilterPanel(f => f.Visible(true))
            .HeaderFilter(headerFilter => headerFilter.Visible(true))
            .FilterRow(f => f.Visible(true))
            .Columns(columns =>
            {
                columns.Add().DataField("name").Caption("Наименование");
            })
            .Paging(paging => paging.PageSize(100))
            .Pager(pager =>
            {
                pager.ShowPageSizeSelector(true);
                pager.AllowedPageSizes(new[] { 10, 25, 50, 100 });
                pager.ShowInfo(true);
            })
            .KeyExpr("Id")
            .DataSource(d => d.Array().Data(ViewBag.applicantCommentAccessTypes)))
</div>