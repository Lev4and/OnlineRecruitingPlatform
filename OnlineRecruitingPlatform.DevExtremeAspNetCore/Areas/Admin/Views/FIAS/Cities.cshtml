@using FIASApi.Model.Entities
<div class="mb-3 card">
    <div class="card-header">Города</div>
    @(Html.DevExtreme().DataGrid<VCity>()
    .ID("gridContainer")
    .ShowBorders(true)
    .FilterPanel(f => f.Visible(true))
    .HeaderFilter(headerFilter => headerFilter.Visible(true))
    .FilterRow(f => f.Visible(true))
    .Columns(columns =>
    {
        columns.AddFor(c => c.Regionname).Caption("Наименование региона");
        columns.AddFor(c => c.Areaname).Caption("Наименование района");
        columns.AddFor(c => c.Offname).Caption("Наименование города");
        columns.AddFor(c => c.Shortname).Caption("Тип объекта");
    })
    .Paging(paging => paging.PageSize(100))
    .Pager(pager =>
    {
        pager.ShowPageSizeSelector(true);
        pager.AllowedPageSizes(new[] { 10, 25, 50, 100 });
        pager.ShowInfo(true);
    })
    .DataSource(ViewBag.cities))
</div>