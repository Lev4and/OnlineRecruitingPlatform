@using FIASApi.Model.Entities
<div class="mb-3 card">
    <div class="card-header">Регионы</div>
    @(Html.DevExtreme().DataGrid<VRegion>()
        .ID("gridContainer")
        .ShowBorders(true)
        .ShowRowLines(true)
        .ColumnHidingEnabled(true)
        .FilterPanel(f => f.Visible(true))
        .HeaderFilter(headerFilter => headerFilter.Visible(true))
        .FilterRow(f => f.Visible(true))
        .Columns(columns =>
        {
            columns.AddFor(r => r.Offname).Caption("Наименование региона");
            columns.AddFor(r => r.Socrname).Caption("Тип объекта");
            columns.Add()
            .Type(GridCommandColumnType.Buttons)
            .Width(50)
            .Buttons(b =>
            {
                b.Add()
                    .Hint("Детали")
                    .Icon("fas fa-info")
                    .OnClick("onDetailsRegionIconClick");
            });
        })
        .Paging(paging => paging.PageSize(100))
        .Pager(pager =>
        {
            pager.ShowPageSizeSelector(true);
            pager.AllowedPageSizes(new[] { 10, 25, 50, 100 });
            pager.ShowInfo(true);
        })
        .KeyExpr("Aoguid")
        .DataSource(ViewBag.regions))
</div>