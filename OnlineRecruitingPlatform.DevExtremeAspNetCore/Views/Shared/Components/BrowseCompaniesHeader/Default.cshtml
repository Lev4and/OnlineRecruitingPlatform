@model OnlineRecruitingPlatform.DevExtremeAspNetCore.Models.BrowseCompaniesViewModel
<header class="page-header bg-img" style="background-image: url(../images/interface/main/bg-banner1.jpg)">
    <div class="container page-name">
        <h1 class="text-center">Обзор компаний</h1>
        <p class="lead text-center">Используйте следующее поле поиска, чтобы найти компании, которые вам больше подходят</p>
    </div>
    <div class="container">
        <form method="post" asp-controller="Company" asp-action="Browse">
            <div class="row">
                <div class="form-group col-xs-12 col-sm-4">
                    <input type="text" class="form-control" placeholder="Название" asp-for="SearchStringByTitle">
                </div>
                <div class="form-group col-xs-12 col-sm-4">
                    <input type="text" class="form-control" placeholder="Расположение" asp-for="SearchStringByLocation">
                </div>
            </div>
            <div class="button-group">
                <div class="action-buttons">
                    <button class="btn btn-primary" type="submit">Применить фильтр</button>
                </div>
            </div>
        </form>
    </div>
</header>