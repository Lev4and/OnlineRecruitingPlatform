@model OnlineRecruitingPlatform.DevExtremeAspNetCore.Models.BrowseVacanciesViewModel
<header class="page-header bg-img" style="background-image: url(../images/interface/main/bg-banner1.jpg)">
    <div class="container page-name">
        <h1 class="text-center">Просмотр вакансий</h1>
        <p class="lead text-center">Используйте следующее окно поиска, чтобы найти работу, которая вам больше подходит</p>
    </div>
    <div class="container">
        <form id="form" method="post" asp-controller="Vacancy" asp-action="Browse">
            <input id="input-hidden-number-page" type="hidden" asp-for="NumberPage" />
            <div class="row">
                <div class="form-group col-xs-12 col-sm-4">
                    <input type="text" class="form-control" placeholder="Должность, навыки или компания" asp-for="SearchStringByJobTitleSkillsOrCompany">
                </div>
                <div class="form-group col-xs-12 col-sm-4">
                    <input type="text" class="form-control" placeholder="Город, область или почтовый индекс" asp-for="SearchStringByCityAddressOrZip">
                </div>
            </div>
            <div class="button-group">
                <div class="action-buttons">
                    <a asp-controller="Vacancy" asp-action="Browse">
                        <button class="btn btn-primary" type="button">Сбросить фильтры</button>
                    </a>
                </div>
                <div class="action-buttons">
                    <button class="btn btn-primary" type="submit">Применить фильтр</button>
                </div>
            </div>
        </form>
    </div>
</header>